{
  /**
  * GENERAL
  */

  "editor.wordBasedSuggestions": false,
  "editor.snippetSuggestions": "none",
  "editor.tabCompletion": "onlySnippets",
  "explorer.sortOrder": "type",
  "editor.parameterHints.cycle": false,
  "typescript.format.semicolons": "remove",
  "workbench.activityBar.visible": true,
  "workbench.tree.indent": 26,
  "workbench.startupEditor": "none",
  "workbench.panel.defaultLocation": "right",
  "workbench.list.openMode": "doubleClick",
  "workbench.editor.showTabs": true,
  "workbench.editor.closeEmptyGroups": false,

  "explorer.confirmDelete": false,

  "update.mode": "manual",

  "explorer.confirmDragAndDrop": false,
  "editor.quickSuggestionsDelay": 150,
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "off",
    "other": "off"
  },
  "editor.suggestOnTriggerCharacters": false,

  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.ed": "editor.excalidraw"
  },


  "mdb.confirmRunAll": false,

  "editor.multiCursorModifier": "ctrlCmd",
  "editor.minimap.scale": 1,
  "search.exclude": {
    "package-lock.json": true
  },
  "editor.suggest.localityBonus": true,
  "editor.renderWhitespace": "none",
  "diffEditor.ignoreTrimWhitespace": false,

  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.printWidth": 100,
  
  "editor.rulers": [ 100 ], // "editor.rulers": [80, 100],

  "window.customMenuBarAltFocus": false,
  

  "files.refactoring.autoSave": false,
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "files.associations": {
    "*.json": "jsonc",
    "*.mongo": "mongodb",
    "*.rmd": "markdown",
    ".env.*": "dotenv",
    "*.xml": "html",
    "*.svg": "html",
  },

  // liveshare
  "liveshare.diagnosticLogging": true,
  "liveshare.diagnosticMode": true,
  "liveshare.authenticationProvider": "Microsoft",

  // eslint
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.validate": [ "typescript", "typescriptreact" ],
  
  // git
  "git.confirmSync": false,
  "git.allowForcePush": true,
  
  
  
  /**
  * TERMINAL
  */

  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "Hasklug Nerd Font",
  // "terminal.integrated.fontSize": 12.5 - when using JetBrains Mono
  // "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.quickOpen",
    "workbench.action.toggleEditorVisibility",
    "workbench.action.toggleAuxiliaryBar",
    "outline.focus",
    "workbench.action.focusAuxiliaryBar",
    "workbench.action.focusActiveEditorGroup",
    "workbench.action.focusPanel"
  ],
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.env.linux": {
    "VSCODE": "${workspaceFolder}"
  },
  
  /**
  * LANGS
  */

  // javascript / typescript
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "/usr/lib/node_modules/typescript/lib/",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  // "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,

  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.tabSize": 2
  },

  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },

  // css / scss
  "cssModules.camelCase": true,
  "css.lint.validProperties": [
    "composes"
  ],
  "scss.lint.validProperties": [
    "composes"
  ],
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // html / pug /svg
  "[pug]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svg.preview.mode": "img",
  
  // json 
  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // sql / dbs / prisma
  "[sql]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false
  },

  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },


  // python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.formatting.blackArgs": [
    "--line-length=102"
  ],
  // "python.linting.flake8Enabled": true,
  "flake8.args": [
    "--max-line-length=100",
    "--ignore=E266,E402,E303,E401,F811,F401,E305,E302,W391,E201,E202",
  ],


  // "prettier.requireConfig": true,


  /**
  * THEME
  */

  "window.zoomLevel": 0.7,
  "editor.fontLigatures": true,
  "editor.fontFamily": "Cartograph CF",
  // "editor.letterSpacing": 0.4,
  // "editor.fontSize": 14.2,
  // "editor.lineHeight": 19,
  // "editor.fontWeight": "400",

  "material-icon-theme.files.associations": {
    "*.ed": "drawio",
  },

  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#81344e",
    // "tab.activeBackground": "#2e3440",
    // "tab.activeForeground": "#d8dee966",
    // "tab.inactiveBackground": "#3b4252",
    // "tab.inactiveForeground": "#d8dee9",
    // "editorGroupHeader.tabsBackground": "#3b4252",
    // "tab.hoverBackground": "#2e3440",
    // "sideBar.background": "#F8F6F6",
    // "sideBar.foreground": "#000000",
    // "editor.background": "#FFFFFF",
    // "editor.foreground": "#000000"
  },
  "workbench.iconTheme": "material-icon-theme",
  "vsicons.dontShowNewVersionMessage": true,




  /**
  * EXTENSIONS
  */
  
  // docker
  "docker.images.groupBy": "Registry",
  "docker.images.sortBy": "Label",
  "docker.images.description": [ "CreatedTime", "Tag" ],
  "docker.images.label": "RepositoryName",
  "docker.commands.run": "docker run --rm -d --env-file ${workspaceFolder}/.env ${exposedPorts} ${tag}",
  "docker.containers.groupBy": "Registry",
  "docker.containers.label": "RepositoryNameAndTag",


  // vscode-color-picker
  "vscode-color-picker.languages": [
    "php",
    "json",
    "python",
    "javascript",
    "typescript",
    "typescriptreact",
  ],

  // comment-anchors
  "commentAnchors.workspace.enabled": false,
  "commentAnchors.parseDelay": 500,
  "commentAnchors.tags.provideAutoCompletion": false,
  "commentAnchors.scrollPosition": "center",
  "commentAnchors.tags.displayLineNumber": false,
  "commentAnchors.tags.displayTagName": false,
  "commentAnchors.tags.anchors": {
    "||": {
      "scope": "file",
      "iconColor": "#A8C023",
      "highlightColor": "#A8C023",
      "isItalic": false,
      "isBold": true
    },
  },

  // excalidraw
  "excalidraw.theme": "dark",

  // gitlens
  "gitlens.hovers.detailsMarkdownFormat": "${avatar} &nbsp;__${author}__, ${ago}${' via 'pullRequest} &nbsp; _(${date})_ ${message}${commands}${---footnotes}",
  "gitlens.defaultGravatarsStyle": "monsterid",
  "gitlens.hovers.avatars": false,
  "gitlens.views.commits.avatars": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.commits.showBranchComparison": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.views.commits.files.layout": "tree",

  // multicommand
  "multiCommand.commands": [
    {
      "command": "multiCommand.chromiumSend",
      "sequence": [ 
        "editor.action.clipboardCopyAction", 
        { "command": "workbench.action.tasks.runTask", "args": "chromium-send" } 
      ]
    },
    {
      "command": "multiCommand.chromiumClear",
      "sequence": [ 
        { "command": "workbench.action.tasks.runTask", "args": "chromium-clear" }
       ]
    },
    {
      "command": "multiCommand.tsSendRegion",
      "sequence": [
        { "command": "workbench.action.terminal.sendSequence", "args": { "text": ".editor\n" } },
        { "command": "workbench.action.terminal.runSelectedText", },
        { "command": "workbench.action.terminal.sendSequence", "args": { "text": "\u0004" }, }
      ]
    },
    {
      "command": "multiCommand.tsLoadImports",
      "interval": 700,
      "sequence": [
        { "command": "workbench.action.tasks.runTask", "args": "grep-imports" },
        { "command": "workbench.action.terminal.sendSequence", "args": { "text": ".load /tmp/npm-repl-imports.ts\n" } }
      ]
    },
    {
      "command": "multiCommand.selectStartEnd",
      "sequence": [
        { "command": "cursorHome" },
        { "command": "cursorLineEndSelect" }
      ]
    }
  ],
  "workbench.colorTheme": "One Dark Pro",
  "window.menuBarVisibility": "hidden"
}